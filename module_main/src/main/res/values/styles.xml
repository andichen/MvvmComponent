<resources>
    <!--StartActivity Style 冷启动效果-->
    <style name="AppTheme.Start" >
        <item name="android:windowBackground">@drawable/main_splash_start</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--自定义的颜色部分-->
    <color name="font_hint">#989898</color>
    <color name="colorPrimar">#3F51B5</color>
    <!--没有选中的样式-->
    <style name="bottom_normal_text">
        <item name="android:textColor">@color/font_hint</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--选中的样式-->
    <style name="bottom_selected_text">
        <item name="android:textColor">@color/colorPrimar</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>
